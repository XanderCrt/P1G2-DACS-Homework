EJEMPLO DE FOR
for (var i = 0; i < 9; i++) {
  n += i;
  mifuncion(n);
}

EJEMPLO DE WHILE
var frase = "";
var n = 1;
while (n < 10) 
	{ 
	frase += "El valor de n es " + n + "<br>"; 
	n++;
	}
document.writeln(frase);

EJEMPLO DE IF
if (dia == "lunes") 
   document.write ("Que tengas un feliz comienzo de semana")
   
